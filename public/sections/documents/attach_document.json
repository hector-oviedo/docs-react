    },
    {
      "type": "p",
      "content": "Attaches a document to a session (symbolic for RAG retrieval)."
    },
    {
      "type": "header",
      "h": 5,
      "content": "METHOD: POST"
    },
    {
      "type": "snippet",
      "language": "bash",
      "content": "/documents/attach"
    },
    {
      "type": "header",
      "h": 3,
      "content": "Body"
    },
    {
      "type": "table",
      "headers": ["Field", "Type", "Required", "Description"],
      "rows": [
        ["doc_id", "string", "Yes", "ID of the document."],
        ["session_id", "string", "Yes", "Session to attach to."]
      ]
    },
    {
      "type": "header",
      "h": 3,
      "content": "Response"
