      "h": 3,
      "content": "Detach Tool"
    },
    {
      "type": "p",
      "content": "Removes a previously attached tool from a session."
    },
    {
      "type": "header",
      "h": 5,
      "content": "METHOD: POST"
    },
    {
      "type": "snippet",
      "language": "bash",
      "content": "/tools/detach"
    },
    {
      "type": "header",
      "h": 3,
      "content": "Body"
    },
    {
      "type": "table",
      "headers": ["Field", "Type", "Required", "Description"],
      "rows": [
        ["tool_id", "string", "Yes", "ID of the tool."],
        ["session_id", "string", "Yes", "Session to detach from."]
      ]
    },
    {
      "type": "header",
      "h": 3,
      "content": "Response"
    },
    {
      "type": "snippet",
      "language": "json",
      "content": "{\n  \"message\": \"Tool detached from session\"\n}"
    }
  ]