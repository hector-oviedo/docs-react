[
    {
      "type": "header",
      "h": 3,
      "content": "Add Document"
    },
    {
      "type": "p",
      "content": "Uploads a document file (FormData) and optionally ingests it into the RAG system."
    },
    {
      "type": "header",
      "h": 5,
      "content": "METHOD: POST"
    },
    {
      "type": "snippet",
      "language": "bash",
      "content": "/documents/upload"
    },
    {
      "type": "header",
      "h": 3,
      "content": "Form Fields"
    },
    {
      "type": "table",
      "headers": ["Field", "Type", "Required", "Description"],
      "rows": [
        ["name", "string", "Yes", "Document name."],
        ["description", "string", "No", "Brief description."],
        ["file", "file", "Yes", "Document file to upload."]
      ]
    },
    {
      "type": "header",
      "h": 3,
      "content": "Response"
    },
    {
      "type": "snippet",
      "language": "json",
      "content": "{\n  \"message\": \"Document uploaded\",\n  \"id\": \"<UUID>\",\n  \"name\": \"filename\",\n  \"description\": \"desc\"\n}"
    }
  ]